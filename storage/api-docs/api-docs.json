                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "student": {
                        "$ref": "#/components/schemas/StudentProfile"
                    }
                },
                "type": "object"
            },
            "Issue": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Judul Masalah"
                    },
                    "description": {
                        "type": "string",
                        "example": "Deskripsi masalah"
                    },
                    "status": {
                        "type": "string",
                        "example": "open"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "CertificateRequest": {
                "required": [
                    "student_id",
                    "internship_id",
                    "issue_date"
                ],
                "properties": {
                    "student_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "internship_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "issue_date": {
                        "type": "string",
                        "format": "date"
                    },
                    "additional_notes": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "DashboardStats": {
                "properties": {
                    "total_students": {
                        "type": "integer",
                        "example": 150
                    },
                    "total_internships": {
                        "type": "integer",
                        "example": 25
                    },
                    "pending_applications": {
                        "type": "integer",
                        "example": 12
                    },
                    "active_internships": {
                        "type": "integer",
                        "example": 45
                    }
                },
                "type": "object"
            },
            "ProfileCompletion": {
                "properties": {
                    "percentage": {
                        "type": "number",
                        "format": "float",
                        "example": 75.5
                    },
                    "missing_fields": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "is_complete": {
                        "type": "boolean",
                        "example": false
                    }
                },
                "type": "object"
            },
            "SystemInfo": {
                "properties": {
                    "app_name": {
                        "type": "string",
                        "example": "SPMT"
                    },
                    "version": {
                        "type": "string",
                        "example": "1.0.0"
                    },
                    "environment": {
                        "type": "string",
                        "example": "production"
                    },
                    "maintenance_mode": {
                        "type": "boolean",
                        "example": false
                    }
                },
                "type": "object"
            },
            "FamilyMember": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Nama Anggota Keluarga"
                    },
                    "relationship": {
                        "type": "string",
                        "example": "Ayah"
                    },
                    "phone": {
                        "type": "string",
                        "example": "081234567890"
                    },
                    "occupation": {
                        "type": "string",
                        "example": "PNS"
                    }
                },
                "type": "object"
            },
            "FamilyMemberRequest": {
                "required": [
